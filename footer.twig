{% if pages["_footer"] %}

	<footer class="footer" id="footer">
		<div class="container">
			<div class="columns is-8 is-variable is-centered">

				{% for section in pages["_footer"].meta.sections %}
					<div class="column is-narrow">
						<h3 class="title is-size-6 has-text-grey-light">{{ section.text }}</h3>
						<ul>
							{% for item in section.items %}
								<li>
									{% if item.icon %}
										<span class="icon">
											<i class="{{ item.icon }}"></i>
										</span>
									{% endif %}
									{% if item.url %}
										<a href="{{ item.url|url }}" class="has-text-grey">
										{% endif %}
										{{ item.text }}
										{% if item.url %}
										</a>
									{% endif %}
								</li>
							{% endfor %}
						</ul>
					</div>
				{% endfor %}

			</div>
		</div>
	</footer>

{% endif %}
